@using Microsoft.AspNetCore.Identity;

@model IEnumerable<TheWorldOfTheBooks.Data.Models.Book>

@inject UserManager<IdentityUser> UserManager;

@{
	ViewData["Title"] = "Index";
}
@if (ViewBag.ErrorMessage != null)
{
	<div class="bg-danger">
		<h2 class="text-center text-white">@ViewBag.ErrorMessage</h2>
	</div>
}
<h1>Index</h1>

@if (User.Identity.IsAuthenticated)
{
	<p>
		<a asp-action="Create">Create New</a>
	</p>
}

@if (User.IsInRole("Administrator"))
{
	<p>
		<a asp-action="Create">Create New as Admin</a>
	</p>
}
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ImageURL)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Published)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Pages)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Genre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Author)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<img src="@Url.Content(item.ImageURL)" alt="@item.Title" style="width:200px;height:200px" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Published)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Pages)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Genre.Title)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>