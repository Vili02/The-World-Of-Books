@model IEnumerable<TheWorldOfTheBooks.Data.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>All genres</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a class="btn btn-outline-primary mb-1 mt-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-outline-success mb-1 mt-2" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-outline-danger mb-1 mt-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>